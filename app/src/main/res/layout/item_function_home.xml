<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_layout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp120"
    android:layout_margin="@dimen/dp_space_0.5"
    android:padding="@dimen/dp4"
    android:background="@drawable/bg_rcc_round_10">

    <TextView
        android:id="@+id/txt_title_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/dp12"
        android:ellipsize="marquee"
        android:fontFamily="@font/font_semibold"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/function"
        android:textColor="@color/text_black_content"
        android:textSize="@dimen/text_comment" />

    <ImageView
        android:id="@+id/img_function"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80"
        android:layout_marginBottom="@dimen/dp4"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/txt_title_function"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_watch_more"
        tools:ignore="ContentDescription" />

</RelativeLayout>
