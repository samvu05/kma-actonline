<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp120"
    android:layout_margin="@dimen/dpSpaceHalf"
    app:cardCornerRadius="@dimen/dp8"
    app:cardElevation="@dimen/dp4">

    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_background">

        <TextView
            android:id="@+id/txt_title_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="@dimen/dp8"
            android:layout_toStartOf="@id/img_function"
            android:fontFamily="@font/poppins_light"
            android:textSize="@dimen/textNormal"
            android:text="Chỉ đường đến trường"
            android:textColor="@color/text_color_primary"
            />

        <ImageView
            android:id="@+id/img_function"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_maps_direction"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>