<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/place_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/place_holder_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/dp64"
        android:background="@android:color/transparent"
        android:src="@drawable/img_placeholder_loading"
        tools:ignore="ContentDescription" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/place_holder_progess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_holder_iv"
        android:layout_centerHorizontal="true"
        app:indicatorColor="@color/text_black_content"
        app:indicatorName="BallPulseIndicator" />

    <TextView
        android:id="@+id/place_holder_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_holder_iv"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/font_semibold"
        android:gravity="center"
        android:maxLines="1"
        android:padding="16dp"
        android:textColor="@color/text_black_content"
        android:text="Bạn vui lòng chờ trong giây lát !"
        android:textSize="@dimen/text_content" />
</RelativeLayout>