<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--round rect style Items News-->
    <style name="roundRectStyleItemNews">
        <item name="android:layout_marginBottom">@dimen/dp4</item>
        <item name="android:layout_marginLeft">@dimen/dp8</item>
        <item name="android:layout_marginRight">@dimen/dp8</item>
        <item name="android:layout_marginTop">@dimen/dp4</item>
    </style>

    <!-- calendar view custom style -->
    <style name="CustomCalendarDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/highlight</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="CustomCalendarMonth" parent="Theme.ActOnline">
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>